<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/layout_divider"
    android:dividerPadding="4dp"
    android:gravity="right"
    android:orientation="horizontal"
    android:showDividers="middle" >

    <TextView
        android:id="@+id/action_delete"
        style="@style/CustomActionButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:drawableLeft="@android:drawable/ic_menu_delete"
        android:text="@string/action_delete" >
    </TextView>

    <TextView
        android:id="@+id/action_freeze"
        style="@style/CustomActionButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:drawableLeft="@android:drawable/ic_media_pause"
        android:text="@string/action_freeze" >
    </TextView>

    <TextView
        android:id="@+id/action_reset_wifi"
        style="@style/CustomActionButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:drawableLeft="@drawable/wifi"
        android:text="@string/action_wifi" >
    </TextView>

</LinearLayout>