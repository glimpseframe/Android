<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhotoActivity" >

    <odesk.johnlife.glimpse.ui.FreezeViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:indeterminate="false"
        android:max="50"
        android:progress="0"
        android:progressDrawable="@drawable/progress"
        android:visibility="invisible" />

    <ProgressBar
        android:id="@+id/progressLoading"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:visibility="invisible" />

    <!-- wifi list -->

    <odesk.johnlife.glimpse.ui.BlurLayout
        android:id="@+id/list_container"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_shade"
            android:divider="@drawable/layout_divider"
            android:orientation="vertical"
            android:padding="8dp"
            android:showDividers="middle" >

            <TextView
                android:id="@+id/title_list"
                style="@style/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_wifi_list" />

            <ListView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/list_divider" />
        </LinearLayout>
    </odesk.johnlife.glimpse.ui.BlurLayout>

    <!-- wifi connection dialog -->

    <odesk.johnlife.glimpse.ui.BlurLayout
        android:id="@+id/wifi_pane"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_shade"
            android:divider="@drawable/layout_divider"
            android:dividerPadding="0dp"
            android:orientation="vertical"
            android:showDividers="middle" >

            <TextView
                android:id="@+id/title"
                style="@style/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/layout_divider"
                android:dividerPadding="0dp"
                android:orientation="horizontal"
                android:padding="4dp"
                android:showDividers="middle" >

                <EditText
                    android:id="@+id/password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:hint="@string/hint_password"
                    android:inputType="textVisiblePassword"
                    android:textSize="@dimen/text_size" />

                <Button
                    android:id="@+id/connect"
                    style="@style/btnStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="@string/button_connect" />
            </LinearLayout>
        </LinearLayout>
    </odesk.johnlife.glimpse.ui.BlurLayout>

    <!-- change email dialog -->

    <FrameLayout
        android:id="@+id/new_email_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >

        <odesk.johnlife.glimpse.ui.BlurLayout
            android:id="@+id/new_email_dialog"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="false"
            android:visibility="gone" >

            <LinearLayout
                android:id="@+id/step1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_shade"
                android:divider="@drawable/layout_divider"
                android:dividerPadding="0dp"
                android:orientation="vertical"
                android:showDividers="middle"
                android:visibility="visible" >

                <TextView
                    style="@style/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_email_step1"
                    android:textSize="@dimen/text_size" />

                <TextView
                    style="@style/txtViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/text_new_email" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/layout_divider"
                    android:dividerPadding="0dp"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:showDividers="middle" >

                    <Button
                        android:id="@+id/received"
                        style="@style/btnStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:text="@string/button_received" />

                    <Button
                        android:id="@+id/cancel"
                        style="@style/btnStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="@android:string/cancel" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/step2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_shade"
                android:divider="@drawable/layout_divider"
                android:dividerPadding="0dp"
                android:orientation="vertical"
                android:showDividers="middle"
                android:visibility="gone" >

                <TextView
                    style="@style/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_email_step2" />

                <TextView
                    style="@style/txtViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/text_new_email_step2" />

                <TextView
                    android:id="@+id/error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="TextView"
                    android:textColor="#f00"
                    android:textSize="@dimen/text_size"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:gravity="center_vertical" >

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/hint_new_email"
                        android:inputType="textEmailAddress"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        style="@style/txtViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_at_glimpseframe" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/layout_divider"
                    android:dividerPadding="0dp"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:showDividers="middle" >

                    <Button
                        android:id="@+id/ok"
                        style="@style/btnStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:text="@android:string/ok" />

                    <Button
                        android:id="@+id/cancel"
                        style="@style/btnStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="@android:string/cancel" />
                </LinearLayout>
            </LinearLayout>
        </odesk.johnlife.glimpse.ui.BlurLayout>
    </FrameLayout>
    
    <!-- delete confirmation dialog -->

    <FrameLayout
        android:id="@+id/delete_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >

        <odesk.johnlife.glimpse.ui.BlurLayout
            android:id="@+id/delete_confirm"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="64dp"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_shade"
                android:divider="@drawable/layout_divider"
                android:dividerPadding="0dp"
                android:orientation="vertical"
                android:showDividers="middle" >

                <TextView
                    style="@style/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dialog_delete" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/layout_divider"
                    android:dividerPadding="0dp"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:showDividers="middle" >

                    <Button
                        android:id="@+id/cancel"
                        style="@style/btnStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@android:drawable/ic_menu_revert"
                        android:padding="8dp"
                        android:text="@android:string/cancel" />

                    <Button
                        android:id="@+id/delete"
                        style="@style/btnStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@android:drawable/ic_menu_delete"
                        android:padding="8dp"
                        android:text="@string/button_delete" />
                </LinearLayout>
            </LinearLayout>
        </odesk.johnlife.glimpse.ui.BlurLayout>
    </FrameLayout>

    <!-- How it works dialog -->

    <FrameLayout
        android:id="@+id/how_it_works_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >

        <odesk.johnlife.glimpse.ui.BlurLayout
            android:id="@+id/how_it_works"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
        	android:visibility="gone" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_shade"
                android:divider="@drawable/layout_divider"
                android:dividerPadding="0dp"
                android:orientation="vertical"
                android:padding="4dp"
                android:showDividers="middle" >

                <TextView
                    style="@style/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/how_it_works" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:showDividers="middle" >

                    <ImageView
                        android:id="@+id/imageHowItWork"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="8dp"
                        android:src="@drawable/ic_launcher" />

                    <TextView
                        android:id="@+id/textEmail"
                        style="@style/txtViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp" />

                    <TextView
                        style="@style/txtViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="@string/how_it_works_message" />
                </LinearLayout>

                <Button
                    android:id="@+id/dialogButtonOK"
                    style="@style/btnStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@android:string/ok" />
            </LinearLayout>
        </odesk.johnlife.glimpse.ui.BlurLayout>

    </FrameLayout>
    
    <!-- error message -->

    <odesk.johnlife.glimpse.ui.BlurLayout
        android:id="@+id/error_pane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" >

        <TextView
            android:id="@+id/error_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/background_shade"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="@color/text"
            android:textSize="@dimen/error_pane" />
    </odesk.johnlife.glimpse.ui.BlurLayout>

    <odesk.johnlife.glimpse.ui.BlurLayout
        android:id="@+id/message_pane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="48dp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/hint_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/background_shade"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="@color/text"
            android:textSize="@dimen/error_pane" />
    </odesk.johnlife.glimpse.ui.BlurLayout>
    <odesk.johnlife.glimpse.ui.BlurLayout
        android:id="@+id/see_new_photos_layout"
        android:layout_width="match_parent"
        android:layout_height="48sp"
        android:layout_gravity="center_horizontal|bottom"
        android:visibility="gone" >   
    </odesk.johnlife.glimpse.ui.BlurLayout>
     <TextView
            android:id="@+id/see_new_photos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_shade"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:layout_gravity="center_horizontal|bottom"
            android:text="@string/text_see_new_photos"
            android:padding="8dp"
            android:textColor="@color/text"
            android:textSize="@dimen/see_new_photos_pane" />
    <!--
        TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="fastupdate. replace me"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="92sp" /
    -->

</FrameLayout>