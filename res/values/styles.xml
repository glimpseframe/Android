<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" tools:ignore="NewApi">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo">
        <!-- API 14 theme customizations can go here. -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:editTextBackground">@drawable/photo_edit_text_holo_light</item>
    	<item name="android:windowActionBarOverlay">true</item>
    </style>

    <!-- ActionBar theme. -->
    <style name="AppTheme.WithActionBar" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
    </style>

    <style name="ActionBarStyle" parent="android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:displayOptions">showCustom</item>
        <item name="android:background">@color/background_shade</item>
    </style>

    <style name="CustomActionButton" parent="android:style/Widget.Holo.Light.ActionButton">
        <item name="android:focusable">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">none</item>
        <item name="android:padding">@dimen/xsmall_padding</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/small_padding</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="ActionButtonText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/actionMenuTextAppearance</item>
        <item name="android:textColor">?android:attr/actionMenuTextColor</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="title" parent="android:Widget.Holo.TextView">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/xsmall_padding</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/title</item>
    </style>
    
    <style name="txtViewStyle" parent="android:Widget.Holo.TextView">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/text</item>
    </style>
    
    <style name="btnStyle" parent="android:Widget.Holo.Button">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>
    
    <style name="actionItem" parent="android:Widget.Holo.TextView">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/action</item>
    </style>
    
</resources>